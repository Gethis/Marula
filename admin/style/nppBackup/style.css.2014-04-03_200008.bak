}
div#todo {
	color: #333;
	border: 2px solid #70B2D1;
	width: 250px;
	text-align: center;
	margin: 10px auto;
}
.clearfix { 
	display:block;
	clear:both;
	width:0px;
	height:0px;
}
label {
	display: inline-block;
}
div#notifications {
	color: #333;
	background-color: #f7f2f2;
	border-bottom-right-radius: 10px;
	border-bottom-left-radius: 10px;
	border: none;
	width: 170px;
	text-align: center;
	margin: 0;
	margin-left: 10px;
	padding: 5px;
	position: absolute;
	z-index: 100;
	max-height: 224px;
	overflow: auto;
}
div#oldBrowserBox {
	padding: 5px;
	color: #fff;
	background-color: #F97E76;
}
button.close {
	float: right;
	background-color: #fff;
	color: #ccc;
	border: none;
	border-radius: 16px;
	margin-top: 4px;
}
.jspArrowUp {
	background: url(../../images/arrow-up.png) no-repeat;
}
.jspArrowDown {
	background: url(../../images/arrow-down.png) no-repeat;
}
span#toTop {
	position: fixed;
	bottom: 3px;
	right: 3px;
	width: 24px;
	height: 24px;
	background: url(../../img/to-top.png) no-repeat;
}
.nice-table {
	/* Remove spacing between table cells (from Normalize.css) */
	border-collapse: collapse;
	border-spacing: 0;
	empty-cells: show;
	border: 1px solid #cbcbcb;
}

.nice-table caption {
	color: #000;
	font: italic 85%/1 arial, sans-serif;
	padding: 1em 0;
	text-align: center;
}

.nice-table td,
.nice-table th {
	border-left: 1px solid #cbcbcb;/*  inner column border */
	border-width: 0 0 0 1px;
	font-size: inherit;
	margin: 0;
	overflow: visible; /*to make ths where the title is really long work*/
	padding: 0.5em 1em; /* cell padding */
}
.nice-table td:first-child,
.nice-table th:first-child {
	border-left-width: 0;
}

.nice-table thead {
	background: #e0e0e0;
	color: #000;
	text-align: left;
	vertical-align: bottom;
}

/*
striping:
   even - #fff (white)
   odd  - #f2f2f2 (light gray)
*/
.nice-table td {
	background-color: transparent;
}
.nice-table-odd td {
	background-color: #f2f2f2;
}

/* nth-child selector for modern browsers */
.nice-table-striped tr:nth-child(2n-1) td {
	background-color: #f2f2f2;
}

/* BORDERED TABLES */
.nice-table-bordered td {
	border-bottom: 1px solid #cbcbcb;
}
.nice-table-bordered tbody > tr:last-child td,
.nice-table-horizontal tbody > tr:last-child td {
	border-bottom-width: 0;
}

div#pages {
	text-align: center;
	margin: 5px;
}

table {
	margin: 0 auto;
}

span.delete {
	background: url(../../img/delete.png) no-repeat;
	width: 24px !important;
	height: 24px !important;
}

/* HORIZONTAL BORDERED TABLES */

.nice-table-horizontal td,
.nice-table-horizontal th {
	border-width: 0 0 1px 0;
	border-bottom: 1px solid #cbcbcb;
}
.nice-table-horizontal tbody > tr:last-child td {
	border-bottom-width: 0;
}
div#stats {
