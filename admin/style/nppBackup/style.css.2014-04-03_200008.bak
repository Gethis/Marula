		 url(../../script/skins/lightgray/fonts/tinymce.eot#iefix) format('eot'),
		 url(../../script/skins/lightgray/fonts/tinymce.ttf) format('ttf'),
		 url(../../script/skins/lightgray/fonts/tinymce.svg) format('svg');
}
div.mce-tinymce {
	width: 60%;
	margin: 15px auto;
}
iframe#content_text_ifr  {
	height: 400px;
}
iframe#content_text_ifr:hover {
	cursor: text;
}
div#loading {
	margin: 15px;
}
body,
html {
	margin: 0;
	padding: 0;
	font-family: Shruti, Arial, Helvetica, Palatino, Garamond;
	color: #222;
}
.right {
	float: right;
}
div#nav {
	margin: 0;
	padding: 15px;
	background-color: #222;
	color: #f0f0f0;
}
div#nav h1 {
	margin: 0;
	text-decoration: none;
	color: #f0f0f0;
	font-size: 25px;
