	padding: 10px;
	background: #f0f0f0;
	width: 337px;
	margin: 10px auto;
}
input {
	padding: 5px;
	border: #999 1px solid;
	border-radius: 3px;
}
input[type="button"],
input[type="submit"]{
	margin: 10px;
}
a {
	color: #70B2D1;
}
a.addToDo {
	margin: 5px;
}
div#nav .right {
	margin-right: 60px;
}

@media print{
	div#nav {
		background-color: #fff;
		color: #222;
	}
	div#nav h1 {
		color: #222;
	}
	a {
		text-decoration: underline !important;
	}
	.title {
		background-color: #fff;
		margin: 0;
		color: #222;
	}
	.footer {
		display: none;
	}
	div#todo {
		border-top: #000 solid 1px;
		border-bottom: #000 solid 1px;
		border-left: none;
		border-right: none;
	}
	div#todo .todo_date {
		color: #222;
	}
	a.addToDo {
		display: none;
	}
	a.remove_note {
		display: none;
	}
	.print_only {
		display: block !important;
	}
}
input:focus {
	outline: none;
}
textarea.edit {
	color: #333;
	padding: 7px;
	width: 500px;
	height: 200px;
	resize: none;
	margin: 0 auto;
}
div.preview {
	border: 1px solid #333;
	color: #333;
	padding: 7px;
	width: 500px;
	height: 200px;
	margin: 0 auto;
}
.textarea_edit_buttons * {
	display: inline-block;
	display*: inline;
}
textarea:focus {
	outline: none;
}
select.horizontal {
	display: block;
}
select.horizontal option {
	display: inline-block !important;
	display*: inline;
}
div.form {
	margin: 10% auto;
	text-align: center;
}